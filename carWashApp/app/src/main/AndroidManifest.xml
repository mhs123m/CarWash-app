<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tuwaiq.carwash">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarWashApp"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".views.storeViews.storeMainActivity.StoreMainActivity"
            android:exported="false" />
        <activity
            android:name=".views.storeViews.storeInfoActivity.StoreInfoActivity"
            android:exported="true" />
        <activity
            android:name=".views.userViews.userMainActivity.UserMainActivity"
            android:exported="false" />
        <activity
            android:name=".views.storeViews.storeLoginAndRegister.StoreSignInActivity"
            android:exported="false" />
        <activity
            android:name=".views.splashScreen.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.userViews.userLoginAndRegister.UserSignInActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>