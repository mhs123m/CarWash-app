<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CarWashApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryGreen</item>
        <item name="colorPrimaryVariant">@color/greyLight</item>
        <item name="colorOnPrimary">@color/primaryBackground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- text colors -->
        <item name="android:textColorPrimary">@color/textAlmostBlack</item>
        <item name="android:textColorSecondary">@color/textDarerkGreen</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="toolBarAppearancequicksand_bold">
        <item name="android:fontFamily">@font/quicksand_bold</item>
    </style>

    <style name="toolBarAppearancequicksand_medium">
        <item name="android:fontFamily">@font/quicksand_medium</item>
    </style>
</resources>